@{
    ViewBag.Title = "EstadoReq";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />

</head>





    <div class=" Container" align-items-center>
        <h2>Lista de Empleados</h2>

        <p class=" boton float-right">
            <a href="~/Reporteria/Index" class="btn btn-default " style="background: #5B3924; color:white">
                <span></span> Regresar
            </a>
        </p>


        @using (Html.BeginForm())
        {
            <fieldset>


                <td> Seleccionar proyecto </td>
                <td>
                    @if (TempData["proyectos"] != null)
                    {
                        @Html.DropDownList("Proyecto", new SelectList(TempData["proyectos"] as List<Proyecto.Models.Proyecto>, "nombre", "nombre"), "----------")
                    }
                </td>

            </fieldset>
        }

      
        <table class="table table-striped">
            <tr>
                <th>
                    Nombre de Cliente
                </th>
                <th>
                    Nombre de Proyecto
                </th>
            </tr>


            <tr>
                <td>
                    Luz
                </td>


                <td>
                    Inge
                </td>

            </tr>


        </table>


        <table class="table table-striped">

            <tr>
                <th>
                    Nombre Requerimiento
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Responsable
                </th>
            </tr>

            <tr>
                <td>
                    Tarea
                </td>

                <td>
                    Terminada
                </td>

                <td>
                    José
                </td>



            </tr>

        </table>
      
    </div>



