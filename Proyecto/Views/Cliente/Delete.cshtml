@model Proyecto.Models.Cliente

@{
    ViewBag.Title = "Delete";
}


<div class="container-fluid text-center">
    <h2>Eliminar Cliente</h2>
    <h3 style="color:#FF0000" ;> ¿Está seguro que desea eliminar este cliente?</h3>

     <table class="d-flex justify-content-center">

        <tbody>
            <tr style="line-height:40px">
                <th>
                    Cédula
                </th>

                <td>
                    @Html.DisplayFor(model => model.cedula)
                </td>
            </tr>

            <tr style="line-height:40px">
                <th>
                    Nombre
                </th>

                <td>
                    @Html.DisplayFor(model => model.nombre)
                </td>
            </tr>

            <tr style="line-height:40px">
                <th>
                    Primer apellido
                </th>

                <td>
                    @Html.DisplayFor(model => model.apellido1)
                </td>
            </tr>

            <tr style="line-height:40px">
                <th>
                    Segundo apellido
                </th>

                <td>
                    @Html.DisplayFor(model => model.apellido2)
                </td>
            </tr>

            <tr style="line-height:40px">
                <th>
                    Teléfono
                </th>

                <td>
                    @Html.DisplayFor(model => model.telefono)
                </td>
            </tr>

            <tr style="line-height:40px">
                <th>
                    Provincia
                </th>

                <td>
                    @Html.DisplayFor(model => model.provincia)
                </td>
            </tr>

            <tr style="line-height:40px">
                <th>
                    Cantón
                </th>

                <td>
                    @Html.DisplayFor(model => model.canton)
                </td>
            </tr>

            <tr style="line-height:40px">
                <th>
                    Distrito
                </th>

                <td>
                    @Html.DisplayFor(model => model.distrito)
                </td>
            </tr>

            <tr style="line-height:40px">
                <th>
                    Dirección Exacta
                </th>

                <td>
                    @Html.DisplayFor(model => model.direccionExacta)
                </td>
            </tr>
        </tbody>
    </table>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="botones text-center">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a href="~/Cliente/Index" class="btn btn-default">
            Regresar
        </a>
    </div>

}
</div>
