@model IEnumerable<Proyecto.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<h2>Lista de clientes</h2>

<p class=" boton float-right">
    <a href="~/Cliente/Create" class="btn btn-success btn-lg glyphicon glyphicon-plus float-right ">
    </a>
</p>
<table class="table">
    <tr>
        <th>
            Cédula
        </th>
        <th>
            Nombre
        </th>
        <th>
            Primer Apellido
        </th>
        <th>
            Segundo apellido
        </th>
        <th>
           Teléfono
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.cedula, "Details", new { id = item.cedula })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccionExacta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.distrito)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.canton)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.provincia)
        </td>
        <td>
            <p class="botones">
                <a href=@Url.Action(item.cedula, "Cliente/Edit") class="btn  btn-info glyphicon glyphicon-wrench float-right ">
                </a>
                <a href=@Url.Action(item.cedula, "Cliente/Delete") class="btn  btn-danger glyphicon glyphicon-trash float-right ">
                </a>
            </p>
        </td>
    </tr>
}

</table>
