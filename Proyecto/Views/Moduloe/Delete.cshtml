@model Proyecto.Models.Modulo

@{
    ViewBag.Title = "Eliminar Modulo";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid text-center">
        <h2>@ViewBag.Title</h2>
        <h3 style="color:#FF0000" ;> ¿Está seguro que desea eliminar este Modulo?</h3>
        <table class="d-flex justify-content-center">
            <tbody>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Nombre)
                    </td>
                </tr>
                <tr>
                    <th>
                        Nombre Proyecto
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.NombreProy)
                    </td>
                </tr>
                
            </tbody>
        </table>
    </div>




    <div class="form-actions no-color">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default btn-default" })
    </div>
}

