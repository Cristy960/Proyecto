@model IEnumerable<Proyecto.Models.Proyecto>

@{
    ViewBag.Title = "Proyectos";
}

<body onload="Desabilitar();" >


    <div class=" Container" align-items-center>
        <h2>Lista de Proyectos</h2>
        <p class=" boton float-right">
            <button onclick= "location.href = 'Proyecto/Create'" class="btn btn-success Lider Desarrollador Cliente btn-lg glyphicon glyphicon-plus float-right ">
            </button>
        </p>
        <table class="table">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Nombre de Cliente
                </th>
                <th>
                    Fecha de inicio
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.nombre, "Details", new { id = item.nombre })
                    </td>
                    <td>
                        @Html.ActionLink(item.Cliente.nombre, "Details", new { id = item.nombre })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaInicio)
                    </td>
                    <td>
                        <p class="botones">
                            <button onclick= "location.href ='@Url.Action(item.nombre, "Proyecto/Edit")'" id= "item.nombre" class="btn Desarrollador Cliente btn-info glyphicon glyphicon-wrench float-right ">
                            </button>
                            <button onclick= "location.href = '@Url.Action(item.nombre, "Proyecto/Delete")'" class="btn  Lider Desarrollador Cliente btn-danger glyphicon glyphicon-trash float-right ">
                            </button>
                        </p>
                    </td>
                </tr>
            }

        </table>

    </div>

   
    <script>
        function Desabilitar() {
            var rol = '@ViewBag.user';
            var lista = document.getElementsByClassName(rol);
            for (var i = 0; i < lista.length; ++i) {
                lista[i].hidden = true;
            }
        }
    </script>
</body>