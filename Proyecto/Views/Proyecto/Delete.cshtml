@model Proyecto.Models.Proyecto

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Proyecto</h2>

<h3 class="boton btn-danger">¿Está seguro que desea borrar este proyecto?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt>
            Objetivo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.objetivo)
        </dd>
        <dt>
            Fecha de Inicio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaInicio)
        </dd>
        <dt>
            Nombre de Cliente
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cliente.nombre)
        </dd>
        <dt>
            Duración Estimada
        </dt>

        <dd>
            @Html.DisplayFor(model => model.duracionEstimada)
        </dd>

        <dt>
            Costo de Trabajo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.costoTrabajo)
        </dd>

        <dt>
            Costo Estimado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.costoEstimado)
        </dd>


        <dt>
            Fecha de Finalización
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaFinalizacion)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a href="~/Proyecto/Index" class="btn btn-success">
                Cancelar
            </a>
    </div>



    }
</div>
