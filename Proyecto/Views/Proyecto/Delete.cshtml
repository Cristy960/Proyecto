@model Proyecto.Models.Proyecto

@{
    ViewBag.Title = "Delete";
}


<div class="container-fluid text-center">
    <h2>Eliminar Proyecto</h2>
    <h3 style="color:#FF0000" ;> ¿Está seguro que desea eliminar este Proyecto?</h3>

    <table class="d-flex justify-content-center">
        <tbody>
            <tr>
                <th>
                    Nombre
                </th>

                <td>
                    @Html.DisplayFor(model => model.nombre)
                </td>
            </tr>

            <tr>
                <th>
                    Objetivo
                </th>

                <td>
                    @Html.DisplayFor(model => model.objetivo)
                </td>
            </tr>

            <tr>
                <th>
                    Fecha de Inicio
                </th>

                <td>
                    @Html.DisplayFor(model => model.fechaInicio)
                </td>
            </tr>

            <tr>
                <th>
                    Nombre de Cliente
                </th>

                <td>
                    @Html.DisplayFor(model => model.Cliente.nombre)
                </td>
            </tr>

            <tr>
                <th>
                    Duración Estimada
                </th>

                <td>
                    @Html.DisplayFor(model => model.duracionEstimada)
                </td>
            </tr>

            <tr>
                <th>
                    Costo de Trabajo
                </th>

                <td>
                    @Html.DisplayFor(model => model.costoTrabajo)
                </td>
            </tr>

            <tr>
                <th>
                    Costo Estimado
                </th>

                <td>
                    @Html.DisplayFor(model => model.costoEstimado)
                </td>
            </tr>

            <tr>
                <th>
                    Fecha de Finalización
                </th>

                <td>
                    @Html.DisplayFor(model => model.fechaFinalizacion)
                </td>
            </tr>
        </tbody>
    </table>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="botones text-center">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a href="~/Proyecto/Index" class="btn btn-default">
            Regresar
        </a>
    </div>



}
</div>