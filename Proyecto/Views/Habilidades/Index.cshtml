@model IEnumerable<Proyecto.Models.Habilidades>

@{
    /**/

    ViewBag.Title = "Index";
}

<h2>Lista habilidades</h2>

<p class=" boton float-right">
    <a href="~/Habilidades/Create" class="btn btn-success btn-lg glyphicon glyphicon-plus float-right ">
    </a>
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Habilidades
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpleadoDesarrollador.nombreED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.conocimientos)
            </td>


            <td>
                <p class="botones">

                    @Html.ActionLink(" ", "Delete", new { id = item.EmpleadoDesarrollador.cedulaED, habilidad = item.conocimientos }, new { @class = "btn  btn-danger glyphicon glyphicon-trash float-right " })

                </p>
            </td>
        </tr>
    }



</table>

<div class="botones text-center">
    <a href="~/EmpleadoDesarrollador/Index" class="btn btn-default ">
        <span></span> Regresar
    </a>
</div>


<apex:page controller="HabilidadesController">
    <apex:form id="form">
        <apex:outputText id="script">
            <script>
                function Desabilitar() {
                     var rol = '@ViewBag.user';
                     var lista = document.getElementsByClassName(rol);
                    for (var i = 0; i < lista.length; ++i) {
                        lista[i].setAttribute('readonly', 'readonly');
                        lista[i].hidden = true;
                    }
                 }
            </script>
        </apex:outputText>
