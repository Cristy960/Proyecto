@model Proyecto.Models.EmpleadoDesarrollador


@{
                /**/

                ViewBag.Title = "Details";
}

<div class="container-fluid text-center">
    <h2>Detalles de Empleado</h2>
    <h3 style="color:#FF0000" ;> ¿Está seguro que desea eliminar este Empleado?</h3>

    <table class="d-flex justify-content-center">
        <tbody>
            <tr style="line-height:50px">
                <th>
                    Cédula
                </th>

                <td>
                    @Html.DisplayFor(model => model.cedulaED)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Nombre
                </th>

                <td>
                    @Html.DisplayFor(model => model.nombreED)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Primer apellido
                </th>

                <td>
                    @Html.DisplayFor(model => model.apellido1ED)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Segundo apellido
                </th>

                <td>
                    @Html.DisplayFor(model => model.apellido2ED)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Fecha de Nacimiento
                </th>

                <td>
                    @Html.DisplayFor(model => model.fechaNacimiento)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Edad
                </th>

                <td>
                    @Html.DisplayFor(model => model.edad)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Teléfono
                </th>

                <td>
                    @Html.DisplayFor(model => model.telefono)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Correo
                </th>

                <td>
                    @Html.DisplayFor(model => model.correo)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Provincia
                </th>

                <td>
                    @Html.DisplayFor(model => model.provincia)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Cantón
                </th>

                <td>
                    @Html.DisplayFor(model => model.canton)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Distrito
                </th>

                <td>
                    @Html.DisplayFor(model => model.distrito)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Dirección Exacta
                </th>

                <td>
                    @Html.DisplayFor(model => model.direccionExacta)
                </td>
            </tr>

            <tr style="line-height:50px">
                <th>
                    Disponibilidad
                </th>

                @if (ViewBag.disp == "true")
                {
                    <td>
                        Sí
                    </td>
                }
                else
                {
                    <td>
                        No
                    </td>
                }
            </tr>

            <tr style="line-height:50px">
                <th>
                    Rol
                </th>
                @if (ViewBag.rol == "true")
                {
                    <td>
                        Desarrollador
                    </td>
                }
                else
                {
                    <td>
                        Otro
                    </td>
                }
            </tr>
        </tbody>
    </table>
</div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="botones text-center">
            <input type="submit" value="Eliminar" class="btn btn-danger" style="margin: 20px" />
            <a href="~/EmpleadoDesarrollador/Index" class="btn btn-default ">
                <span></span> Cancelar
            </a>
        </div>
    }








